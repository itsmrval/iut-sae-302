<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_700"
            android:elevation="4dp"

            app:title="@string/app_name"
            app:titleTextColor="@android:color/white"
            app:titleCentered="true" />

        <!-- Premiers bouton cliquable -->
        <LinearLayout
            android:id="@+id/view_attendance_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_view_attendance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_attendance"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Deuxième bouton cliquable -->
        <LinearLayout
            android:id="@+id/take_attendance_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_take_attendance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/take_attendance"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Troisième bouton cliquable -->
        <LinearLayout
            android:id="@+id/manage_students_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_manage_students"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_students"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Quatrième bouton cliquable -->
        <LinearLayout
            android:id="@+id/manage_seances_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_manage_seances"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_seances"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Cinquième bouton cliquable -->
        <LinearLayout
            android:id="@+id/disconnect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/orange_item_background"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_disconnecting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disconnect"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
